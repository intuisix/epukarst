{% extends 'base.html.twig' %}

{% block title %}
    Relevés de système
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mb-3">Relevés de systèmes</h1>

        <table width="100%" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Terrain</th>
                    <th>Encodage</th>
                    <th>Auteur</th>
                    <th>Code</th>
                    <th>Système</th>
                    <th>Stations</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for systemReading in pagination.data %}
                    <tr>
                        <td>
                            {{systemReading.fieldDateTime|date('d/m/Y')}}
                        </td>
                        <td>
                            {{systemReading.encodingDateTime|date('d/m/Y')}}
                        </td>
                        <td>
                            {{systemReading.encodingAuthor}}
                        </td>
                        <td>
                            {% if is_granted('SYSTEM_VIEW', systemReading) %}
                                <a href="{{path('system_reading_show', {'code': systemReading.code})}}">{{systemReading.code}}</a>
                            {% endif %}
                        </td>
                        <td>
                            {{systemReading.system.name}}
                        </td>
                        <td>
                            {% if systemReading.stationReadings|length %}
                                <span class="badge badge-primary badge-pill">{{systemReading.stationReadings|length}}</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if is_granted('SYSTEM_DELETE', systemReading) %}
                                <a href="{{path('system_reading_delete', {'code': systemReading.code})}}"><i class="fas fa-trash text-danger"></i></a>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="100">Il n'y a pas de relevés à afficher.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        {# Afficher le composant de pagination #}
        {{pagination.display}}

        {# Bouton déroulant permettant d'encoder un relevé de système #}
        {% if is_granted('SYSTEM_ENCODE') %}
            <button id="btnGroupDrop1" type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <fa class="fas fa-plus"></fa> Encoder un relevé de système
            </button>
            <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                {% for system in systems %}
                    {% if is_granted('SYSTEM_ENCODE', system) %}
                        <a class="dropdown-item" href="{{path('system_reading_encode', {'code': system.code})}}">{{system.name}}</a>
                    {% endif %}
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
