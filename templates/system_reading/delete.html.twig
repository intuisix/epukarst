{% extends 'base.html.twig' %}

{% block title %}
    {{title}}
{% endblock %}

{% block body %}
    <div class="container mb-3">
        <h1>{{title}}</h1>

        {{form_start(form)}}

        <div class="alert alert-danger">
            Cette opération est irréversible.
            <br>
            Etes-vous certain de vouloir supprimer ce relevé du <strong>{{systemReading.fieldDateTime|date('d/m/Y')}}</strong> relatif au système <strong>{{systemReading.system}}</strong>, ainsi que les {{systemReading.stationReadings|length}} relevés de stations qu'il contient&nbsp;?
        </div>

        {# Ajouter un bouton pour confirmer la suppression #}
        <button type="submit" class="btn btn-danger">
            <i class="fa fa-trash" aria-hidden="true"></i>
            Supprimer le relevé
        </button>
        {# Bouton permettant de revenir à la page précédente #}
        {% include '_back.html.twig' %}

        {{form_end(form)}}
    </div>
{% endblock %}
