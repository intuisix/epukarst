{% extends 'base.html.twig' %}

{% block title %}
    {{system.name}}
{% endblock %}

{% block body %}
    {# Image de titre #}
    <div class="ad-title" style="background-image: url(http://lorempixel.com/500/300)">
        <div class="container")>
            <h1 class="d-flex align-items-center">
                <span class="badge badge-secondary mr-2">{{system.code}}</span>
                {{system.name}}
            </h1>
            <p><big>{{system.introduction}}</big></p>
            <p>{{system.commune}} - {{system.basin}}</p>
            {% if app.user and app.user.isAdmin() %}
                <a href="{{ path('system_modify', {'slug': system.slug}) }}" class="btn btn-primary">Modifier le système</a>

                {# La confirmation ne fonctionne pas avec Firefox #}
                <a href="{{ path('system_delete', {'slug': system.slug}) }}" class="btn btn-danger" id='delete-button' onclick="return confirm(’Etes-vous sûr de vouloir supprimer ce système ?’)">Supprimer le système</a>
            {% endif %}
        </div>
    </div>

    {# Corps de la page #}
    <div class="container">
        <div class="row">

            {# Colonne principale #}
            <div class="col-md-8 mb-3">
                {# Description détaillée du système #}
                {{system.description|raw}}

                {# Carousel d'images #}
                <div id="carouselExampleIndicators" class="carousel slide mb-5" data-ride="carousel">
                    <ol class="carousel-indicators">
                        {% for image in 1..4 %}
                            <li data-target="#carouselExampleIndicators" data-slide-to="{{loop.index0}}" class="{% if loop.first %}active{% endif %}"></li>
                        {% endfor %}
                    </ol>
                    <div class="carousel-inner">
                        {% for image in 1..4 %}
                            <div class="carousel-item {% if loop.first %}active{% endif %}">
                                <img src="http://lorempixel.com/400/200?{{loop.index}}" class="d-block w-100" alt="...">
                                <div class="carousel-caption d-none-d-md-block">
                                    <h5>{{system.name}}</h5>
                                    <p>Légende de l'image {{loop.index}}</p>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                
                {# Description des bassins du système #}
                {% for basin in system.basins %}
                    <hr>
                    <h2 id="basin_{{basin.code}}" class="d-flex align-items-center">
                        <span class="badge badge-secondary mr-2">{{basin.code}}</span>
                        {{basin.name}}
                    </h2>
                    {{basin.description|raw}}

                    {# Description des stations du système #}
                    {% for station in basin.stations %}
                        <h3 id="station_{{station.code}}" class="d-flex align-items-center">
                            <span class="badge badge-secondary mr-2">{{station.code}}</span>
                            {{station.name}}
                        </h3>
                        {{station.description|raw}}
                    {% endfor %}

                {% endfor %}
            </div>

            {# Colonne de droite #}
            <div class="col alert bg-light">
                <h2>Bassins et stations</h2>

                {# Pour chaque bassin #}
                {% for basin in system.basins %}
                    <div class="card mt-3">
                        <div class="card-header">
                            <a href="#basin_{{basin.code}}">{{basin.name}}</a>
                        </div>
                        <ul class="list-group list-group-flush">
                            {% for station in basin.stations %}
                                <li class="list-group-item">
                                    <a href="#station_{{station.code}}">{{station.name}}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}