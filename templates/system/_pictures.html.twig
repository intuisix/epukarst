{% if system.pictures|length > 0 %}
    <h2 id="pictures">Photos du syst√®me</h2>
    <center>
        <div id="systemPicturesCarousel" class="carousel slide mb-3 bg-dark" data-ride="carousel" style="width: 100%; height: 540px">
            <ol class="carousel-indicators">
                {% for picture in system.pictures %}
                    <li data-target="#systemPicturesCarousel" data-slide-to="{{loop.index0}}" class="{% if loop.first %}active{% endif %}"></li>
                {% endfor %}
            </ol>
            <div class="carousel-inner">
                {% for picture in system.pictures %}
                    <div class="carousel-item {% if loop.first %}active{% endif %}">
                        <img src="/{{picture.fileName}}" class="center d-block w-100" alt="{{picture.caption}}" style="object-fit: contain; width: 720px; height: 540px">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>{{system.name}}</h5>
                            <p>{{picture.caption}}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <a class="carousel-control-prev" href="#systemPicturesCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#systemPicturesCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </center>
{% endif %}
